<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="guiacursodois.Views.DetailPage"
             xmlns:vm="clr-namespace:guiacursodois.ViewModel"
             x:DataType="vm:DetailPageViewModel"
             >


    <ContentPage.BindingContext>
        <vm:DetailPageViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Label x:Name="TitleLabel" Text="TitleLabel" FontSize="24" FontAttributes="Bold" />
        <Label x:Name="DetailLabel" Text="DetailLabel" FontSize="18" />
    </StackLayout>
</ContentPage>